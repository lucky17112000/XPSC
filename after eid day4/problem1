using namespace std;
const int N = 1e5 + 7;
void solve()
{
    string s;
    cin >> s;
    if (s.size() % 2 == 0 and s[0] != ')' and s[s.size() - 1] != '(')
        cout << "YES" << endl;
    else
        cout << "NO" << endl;
}

int32_t main()
{
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
    // hey_output();

    int t = 1;
    cin >> t;
    while (t--)
    {
        solve();
    }

    return 0;
}
