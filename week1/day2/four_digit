using namespace std;
const int N = 1e5 + 5;

int32_t main()
{
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
    // hey_output();
    int n;
    cin >> n;
    string con = to_string(n);
    int sz = con.size();
    int due = 4 - sz;
    // cout << con.size() << " " << due << endl;
    string ans;
    for(int i = 0; i < due; ++i)ans+='0';
    for(int i = 0; i < con.size(); ++i)ans+=con[i];
   cout << ans<< endl;
    return 0;
}
