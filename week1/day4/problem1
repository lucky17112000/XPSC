using namespace std;
const int N = 1e5 + 5;

int32_t main()
{
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
    // hey_output();
    int n, m;
    cin >> n >> m;
    if (n == m)
        cout << n + m << endl;
    else
    {
        int my_max = max(n , m);
        int ans = 0;ans+=my_max;
        --my_max;
        ans+=my_max;
        cout << ans << endl;
    }
    return 0;
}
