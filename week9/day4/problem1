using namespace std;
const int N = 1e5 + 7;
void makeMeHappyReducePainGoAhedNeverGiveUPIWilBeSuccessInshaAllah()
{
    ll n;
    cin >> n;
    string s;
    cin >> s;
    string task1 = s;

    sort(s.begin(), s.end());
    s.erase(unique(s.begin(), s.end()), s.end());
    map<char, char> mp;
    for (int i = 0; i < s.size(); ++i)
    {
        mp[s[i]] = s[s.size() - 1 - i];
    }
    string k = task1;
    for (int i = 0; i < n; ++i)
    {
        k[i] = mp[task1[i]];
    }
    cout << k << endl;
}

int32_t main()
{
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
    // hey_output();

    int t = 1;
     cin >> t;
    while (t--)
    {
        makeMeHappyReducePainGoAhedNeverGiveUPIWilBeSuccessInshaAllah();
    }

    return 0;
}
