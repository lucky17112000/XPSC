using namespace std;
const int N = 1e5 + 7;
void makeMeHappyReducePainGoAhedNeverGiveUPIWilBeSuccessInshaAllah()
{
    ll a, b;
    cin >> a >> b;
    if (b == 1)
    {
        cout << "NO" << endl;
        return;
    }
    vector<ll> ans;
    ans.push_back(a * b);
    ans.push_back(a);
    ans.push_back(a * (b + 1));
    cout << "YES" << endl;
    for (auto u : ans)
        cout << u << " ";
    cout << endl;
}

int32_t main()
{
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
    // hey_output();

    int t = 1;
    cin >> t;
    while (t--)
    {
        makeMeHappyReducePainGoAhedNeverGiveUPIWilBeSuccessInshaAllah();
    }

    return 0;
}
