using namespace std;
const int N = 1e5 + 7;
void makeMeHappyReducePainGoAhedNeverGiveUPIWilBeSuccessInshaAllah()
{
    ll n, m;
    cin >> n >> m;
    ll t = 0;
    if (m % 2 != 0)
    {
        t = (m / 2)+1;
    }
    else
        t = m / 2;
    ll ghor = m * 4;
   // cout << ghor << endl;//done
    ll baki = t*15 - ghor;
    //cout << baki<< endl;
    ll cnt=0;
    if (baki >= n)
        cout << t << endl;
    else
    {
        while (true)
        {
            baki+=15;
            ++cnt;
            if(baki>= n)break;
        }

        cout << t +  cnt << endl;
    }
}

int32_t main()
{
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
    // hey_output();

    int t = 1;
    cin >> t;
    while (t--)
    {
        makeMeHappyReducePainGoAhedNeverGiveUPIWilBeSuccessInshaAllah();
    }

    return 0;
}
