using namespace std;
const int N = 1e5 + 7;
void makeMeHappyReducePainGoAhedNeverGiveUPIWilBeSuccessInshaAllah()
{
    ll n;
    cin >> n;
    vector<ll> ans;
    if (n % 2 != 0)
    {
        ans.push_back(3);
        n -= 3;
    }

    ll task = n / 2;
    for (int i = 1; i <= task; ++i)
        ans.push_back(2);
    cout << ans.size() << endl;
    sort(ans.begin() , ans.end());
    for (auto u : ans)
        cout << u << " ";
    cout << endl;
}

int32_t main()
{
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
    // hey_output();

    int t = 1;
    // cin >> t;
    while (t--)
    {
        makeMeHappyReducePainGoAhedNeverGiveUPIWilBeSuccessInshaAllah();
    }

    return 0;
}
