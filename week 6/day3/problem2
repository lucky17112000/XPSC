using namespace std;
const int N = 1e5 + 7;
void solve()
{
    ll n;
    cin >> n;
    vector<ll> arr(n);
    ll sum = 0;
    for (int i = 0; i < n; ++i)
    {
        ll val;
        cin >> val;
        sum = max(0LL, val + sum);
    }
    cout << sum << endl;
}

int32_t main()
{
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
    // hey_output();

    int t = 1;
     cin >> t;
    while (t--)
    {
        solve();
    }

    return 0;
}
