using namespace std;
const int N = 1e5 + 7;
void makeMeHappyReducePainGoAhedNeverGiveUPIWilBeSuccessInshaAllah()
{
    ll k, m, n;
    cin >> k >> m >> n;
    vector<ll> arr(n);
    for (int i = 0; i < n; ++i)
        cin >> arr[i];

    ll ans = m - 1;
    m = 1;
    ll i = 0;
    while (i < n)
    {
        m += arr[i];
        m = min(k, m);
        ans += (m - 1);
        m = 1;
        ++i;
    }
    cout << ans + 1 << endl;
}

int32_t main()
{
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
    // hey_output();

    int t = 1;
    cin >> t;
    while (t--)
    {
        makeMeHappyReducePainGoAhedNeverGiveUPIWilBeSuccessInshaAllah();
    }

    return 0;
}
