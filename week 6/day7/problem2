using namespace std;
const int N = 1e5 + 7;
bool cmp(pii a, pii b)
{
    if ((a.first + a.second) > (b.first + b.second))
        return true;
}
void makeMeHappyReducePainGoAhedNeverGiveUPIWilBeSuccessInshaAllah()
{
    ll n, power;
    cin >> n >> power;
    vector<ll> arr(n);
    for (int i = 0; i < n; ++i)
    {
        cin >> arr[i];
        arr[i] += (i+1);
    }
    sort(arr.begin(), arr.end());
    ll cnt = 0;
    for (int i = 0; i < n; ++i)
    {
        if (arr[i] <= power)
        {
            power -= arr[i];
            ++cnt;
        }
    }
    cout << cnt << endl;
}

int32_t main()
{
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
    // hey_output();

    int t = 1;
    cin >> t;
    while (t--)
    {
        makeMeHappyReducePainGoAhedNeverGiveUPIWilBeSuccessInshaAllah();
    }

    return 0;
}
