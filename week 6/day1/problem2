using namespace std;
const int N = 1e5 + 7;
static void go_on()
{
    int a, b, c;
    cin >> a >> b >> c;
    int for_one = a - 1;
    int for_two = abs(b - c) + (c - 1);
    if (for_one < for_two)
        cout << 1 << endl;
    else if (for_one > for_two)
        cout << 2 << endl;
    else
        cout << 3 << endl;
}

//problem link:https://codeforces.com/contest/1729/problem/A

int32_t main()
{
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
    // hey_output();
    ll t = 1;
    cin >> t;
    while (t--)
    {
        go_on();
    }

    return 0;
}
