#include <bits/stdc++.h>
#define endl '\n'
#define ll long long int
#define inf INT_MAX
#define negInf INT_MIN
#define linf LLONG_MAX
#define pii pair<int, int>

// void hey_output()
// {
// #ifndef ONLINE_JUDGE
