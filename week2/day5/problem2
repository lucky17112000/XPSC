//     freopen("output.txt", "w", stdout);
// #endif
// }
using namespace std;
const int N = 1e5 + 5;

int32_t main()
{
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
    // hey_output();
    ll n, m;
    cin >> n >> m;
    ll cnt = 0;
    for (int i = 0; i <= n; ++i)
    {
        for (int j = 0; j <= n; ++j)
        {
            ll temp = m - (i + j);
            if (temp >= 0 and temp <= n)
                ++cnt;
        }
    }
    cout << cnt << endl;

       return 0;
}
