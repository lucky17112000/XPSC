using namespace std;
const int N = 1e5 + 5;

int32_t main()
{
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
    // hey_output();
    int t;
    cin >> t;
    while (t--)
    {
        int n;
        cin >> n;
        string name = "Timur";
        sort(name.begin(), name.end());
        string s;
        cin >> s;
        sort(s.begin(), s.end());
        if (s == name)
            cout << "YES" << endl;
        else
            cout << "NO" << endl;
    }
    return 0;
}
