using namespace std;
const int N = 1e5 + 7;
void makeMeHappyReducePainGoAhedNeverGiveUPIWilBeSuccessInshaAllah()
{
    ll n, m;
    cin >> n >> m;

    vector<ll> helth(n);
    vector<ll> cordi(n);
    for (int i = 0; i < n; ++i)
        cin >> helth[i];
    for (int i = 0; i < n; ++i)
        cin >> cordi[i];
    vector<ll> pool(n + 1);
    for (int i = 0; i < n; ++i)
    {
        pool[abs(cordi[i])] += helth[i];
    }
    ll bullet = 0;
    bool flag = true;
    ll se = 0;
    for (int i = 1; i <= n; ++i)
    {
        se += pool[i];
        bullet += m;
        if (bullet < se)
        {
            flag = false;
            break;
        }
    }
    if (flag)
        cout << "YES" << endl;
    else
        cout << "NO" << endl;
}

int32_t main()
{
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
    // hey_output();

    int t = 1;
    cin >> t;
    while (t--)
    {
        makeMeHappyReducePainGoAhedNeverGiveUPIWilBeSuccessInshaAllah();
    }

    return 0;
}
