using namespace std;
const int N = 1e5 + 7;
void makeMeHappyReducePainGoAhedNeverGiveUPIWilBeSuccessInshaAllah()
{
    ll n;
    cin >> n;
    if (n % 2 != 0)
    {
        for (int i = 1; i <= n; ++i)
            cout << i << " ";
        cout << endl;
    }
    else
    {
        ll cnt = 2;
        while (n--)
        {
            cout << cnt << " ";
            cnt += 2;
        }
        cout << endl;
    }
}

int32_t main()
{
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
    // hey_output();

    int t = 1;
    cin >> t;
    while (t--)
    {
        makeMeHappyReducePainGoAhedNeverGiveUPIWilBeSuccessInshaAllah();
    }

    return 0;
}
