using namespace std;
const int N = 1e5 + 7;
void makeMeHappyReducePainGoAhedNeverGiveUPIWilBeSuccessInshaAllah()
{
    ll n;
    cin >> n;
    vector<pii> arr(n);
    map<ll, ll>mp;
    for (int i = 0; i < n; ++i)
    {
        int val;
        cin >> val;
        arr[i].first = val;
        arr[i].second = i + 1;
       
    }

    for (int i = 0; i < n; ++i)
    {
        if (arr[i].first >= arr[i].second)
            swap(arr[i].first, arr[i].second);
    }
    bool flag = false;
    for (int i = 0; i < n-1; ++i)
    {
        for (int j = i+1; j < n; ++j)
        {
            if (arr[i].first == arr[j].first and arr[i].second == arr[j].second)
            {
                flag = true;
                break;
            }
        }
    }
    if (flag)
        cout << 2 << endl;
    else
        cout << 3 << endl;

    //     for (int i = 0; i < n; ++i)
    // {
    //    cout << arr[i].first<< " " << arr[i].second << endl;
    // }
}

int32_t main()
{
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
    // hey_output();

    int t = 1;
    cin >> t;
    while (t--)
    {
        makeMeHappyReducePainGoAhedNeverGiveUPIWilBeSuccessInshaAllah();
    }

    return 0;
}
