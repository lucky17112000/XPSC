using namespace std;
const int N = 1e5 + 7;
void makeMeHappyReducePainGoAhedNeverGiveUPIWilBeSuccessInshaAllah()
{
    string s;
    cin >> s;
    ll oneCount = 0;
    ll ans = 0;
    for (int i = 0; i < s.size(); ++i)
    {
        if (s[i] == '1')
            ++oneCount;
        else if (oneCount > 0)
            ans += (oneCount + 1);
    }
    cout << ans << endl;
}

int32_t main()
{
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
    // hey_output();

    int t = 1;
    cin >> t;
    while (t--)
    {
        makeMeHappyReducePainGoAhedNeverGiveUPIWilBeSuccessInshaAllah();
    }

    return 0;
}
