using namespace std;
const int N = 1e5 + 7;
void makeMeHappyReducePainGoAhedNeverGiveUPIWilBeSuccessInshaAllah()
{
    ll n;
    cin >> n;
    vector<ll> myBoys(n);
    for (int i = 0; i < n; ++i)
        cin >> myBoys[i];
    ll m;
    cin >> m;
    vector<ll> yourGirls(m); // yes uncle ur girls and my boys will make couple
    for (int i = 0; i < m; ++i)
        cin >> yourGirls[i];
    sort(myBoys.begin(), myBoys.end());
    sort(yourGirls.begin(), yourGirls.end());
    ll makeCoupleForDance = 0;
    for (int i = 0; i < n; ++i)
    {
        for (int j = 0; j < m; ++j)
        {
            if (abs(myBoys[i] - yourGirls[j]) <= 1)
            {
                ++makeCoupleForDance;
                yourGirls[j] = 102; // so funny ha ha ha
                break;
            }
        }
    }
    cout << makeCoupleForDance << endl;
}

int32_t main()
{
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
    // hey_output();

    int t = 1;
    // cin >> t;
    while (t--)
    {
        makeMeHappyReducePainGoAhedNeverGiveUPIWilBeSuccessInshaAllah();
    }

    return 0;
}
